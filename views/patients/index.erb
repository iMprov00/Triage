<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Пациенты</h1>
  <a href="/patients/new" class="btn btn-primary">Добавить пациента</a>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ФИО</th>
      <th>Дата рождения</th>
      <th>Дата поступления</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= "#{patient.last_name} #{patient.first_name} #{patient.middle_name}" %></td>
        <td><%= patient.birth_date %></td>
        <td><%= patient.admission_date %></td>
        <td>
          <a href="/patients/<%= patient.id %>" class="btn btn-sm btn-info">Просмотр</a>
          <a href="/patients/<%= patient.id %>/edit" class="btn btn-sm btn-warning">Редактировать</a>
          <form action="/patients/<%= patient.id %>" method="post" style="display: inline;">
            <input type="hidden" name="_method" value="delete">
            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Удалить пациента?')">Удалить</button>
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>