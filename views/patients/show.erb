<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Пациент: <%= "#{@patient.last_name} #{@patient.first_name} #{@patient.middle_name}" %></h1>
  <div>
    <a href="/patients/<%= @patient.id %>/edit" class="btn btn-warning">Редактировать</a>
    <a href="/patients/<%= @patient.id %>/assessments/new" class="btn btn-primary">Добавить обследование</a>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <p><strong>Дата рождения:</strong> <%= @patient.birth_date %></p>
    <p><strong>Дата поступления:</strong> <%= @patient.admission_date %></p>
  </div>
</div>

<h2 class="mt-4">Обследования</h2>
<% if @assessments.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Дата обследования</th>
        <th>Приоритет</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% @assessments.each do |assessment| %>
        <tr class="priority-<%= assessment.calculate_priority %>">
          <td><%= assessment.created_at.strftime("%d.%m.%Y %H:%M") %></td>
          <td><%= assessment.calculate_priority %></td>
          <td>
            <a href="/patients/<%= @patient.id %>/assessments/<%= assessment.id %>" class="btn btn-sm btn-info">Просмотр</a>
            <a href="/patients/<%= @patient.id %>/assessments/<%= assessment.id %>/edit" class="btn btn-sm btn-warning">Редактировать</a>
            <form action="/patients/<%= @patient.id %>/assessments/<%= assessment.id %>" method="post" style="display: inline;">
              <input type="hidden" name="_method" value="delete">
              <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Удалить обследование?')">Удалить</button>
            </form>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Нет обследований</p>
<% end %>